<%= form_for(subscription, url: url) do |f| %>
  <% if subscription.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h4>
      <ul class="mb-0">
        <% subscription.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :plan_id, 'Plan' %><br>
    <%= f.collection_select :plan_id, Tang::Plan.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, min: 1, step: 1 %>
  </div>

  <div class="field">
    <%= f.label :trial_end %><br>
    <%= f.date_select :trial_end, { include_blank: true, default: nil } %>
  </div>

  <div class="field">
    <%= f.label :end_trial_now %><br>
    <%= f.check_box :end_trial_now %>
  </div>

  <div class="field">
    <%= f.label :tax_percent %><br>
    <%= f.number_field :tax_percent, min: 0, step: 0.0001 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
