<%= render 'nav' %>

<h1>Listing Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Status</th>
      <th>Plan</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.user.email %></td>
        <td></td>
        <td>
          <%= subscription.plan.name %>
          <%= "(#{plan_cost(subscription.plan)})" %>
        </td>
        <td><%= created_datetime(subscription.created_at) %></td>
        <td><%= link_to 'Show', admin_subscription_path(subscription) %></td>
        <td><%= link_to 'Edit', edit_admin_subscription_path(subscription) %></td>
        <td><%= link_to 'Destroy', admin_subscription_path(subscription), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


